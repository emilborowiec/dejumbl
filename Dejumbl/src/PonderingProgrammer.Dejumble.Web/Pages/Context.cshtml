@page "{ownerUserName}/{contextKey}"
@model ContextModel

@{
    ViewData["Title"] = @Model.Context.Name;
}

<h1>@Model.Context.Name by @Model.Context.OwnerUserName</h1>

<p>@Model.Context.Description</p>

<div id="graph"></div>

@if (@Model.OwnedByCurrentUser)
{
    
}

@section Scripts {
    <script type="text/javascript">
        let viz = new Viz();
        viz.renderSVGElement('@Html.Raw(Model.ContextGraphviz)')
            .then(function(element) {
                $("#graph").append(element);
            });
    </script>
}