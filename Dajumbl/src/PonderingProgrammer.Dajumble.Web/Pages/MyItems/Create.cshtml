@page "{contextKey}"
@using Microsoft.AspNetCore.Authorization
@model CreateModel
@attribute [Authorize]

@{
    ViewData["Title"] = "New Item";
}

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.ItemType"></label>
        <select asp-for="Input.ItemType" asp-items="@Model.ItemTypeOptions" class="form-control"></select>
        <span asp-validation-for="Input.ItemType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Label"></label>
        <input asp-for="Input.Label" class="form-control">
        <span asp-validation-for="Input.Label" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Content"></label>
        <input asp-for="Input.Content" class="form-control">
        <span asp-validation-for="Input.Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>